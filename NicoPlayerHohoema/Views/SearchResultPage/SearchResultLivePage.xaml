                        <ItemsPanelTemplate>
                            <ItemsStackPanel Orientation="Vertical"
                                           />
                        </ItemsPanelTemplate>
                    </controls:IncrementalLoadingList.ItemsPanel>

                </controls:IncrementalLoadingList>
                -->


            </toolkit:DockPanel>
        </Border>
    </Grid>
</Page>
