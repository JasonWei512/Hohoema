<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:searchContent="using:NicoPlayerHohoema.Views.SearchContent"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:ext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:rlv="using:RefreshableListView"
    xmlns:controls="using:NicoPlayerHohoema.Views.Controls"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    
    mc:Ignorable="d">

    <Page.Resources>

        <DataTemplate x:Key="EmptySearchContentTemplate">
            <searchContent:EmptySearchPageContent />
        </DataTemplate>


        <DataTemplate x:Key="TagSearchContentTemplate">
            <searchContent:TagSearchPageContent />
        </DataTemplate>

        <DataTemplate x:Key="KeywordSearchContentTemplate">
            <searchContent:KeywordSearchPageContent />
        </DataTemplate>

        <DataTemplate x:Key="MylistSearchContentTemplate">
            <searchContent:MylistSearchPageContent />
        </DataTemplate>


        <local:SearchPageContentTemplateSelector x:Key="SearchPageContentTemplateSelector"
                                                 Empty="{StaticResource EmptySearchContentTemplate}" 
                                                 Tag="{StaticResource TagSearchContentTemplate}"
                                                 Keyword="{StaticResource KeywordSearchContentTemplate}"
                                                 Mylist="{StaticResource MylistSearchContentTemplate}"
                                                 />
    </Page.Resources>

    <Grid>
        <Border>

            <toolkit:DockPanel>

                <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                   

                    <!-- 検索履歴 -->
                    <Border toolkit:DockPanel.Dock="Left" Margin="8 0 0 0">
                        <AppBarButton Icon="Clock" 
                                      IsCompact="True"
                                      >
                            <AppBarButton.Flyout>
                                <Flyout x:Name="SearchHistoryFlyout">
                                    <ListView ItemsSource="{Binding SearchHistoryItems}">

                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <Run Text="{Binding Keyword}" />
                        
                                                    <Run Text="{Binding Target}" Foreground="Gray" FontSize="12" />
                        
                        
                                                    <i:Interaction.Behaviors>
                                                        <core:EventTriggerBehavior EventName="Tapped">
                                                            <core:InvokeCommandAction Command="{Binding SelectedCommand}" />
                                                            <core:CallMethodAction TargetObject="{Binding ElementName=SearchHistoryFlyout}" MethodName="Hide" />
                                                        </core:EventTriggerBehavior>
                                                    </i:Interaction.Behaviors>      
                                                </TextBlock>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Flyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>
                    </Border>

                    <!-- ターゲット（Keyword, Tag etc） -->
                    <Border toolkit:DockPanel.Dock="Left" Margin="8 0">
                        
                        <ComboBox ItemsSource="{Binding TargetListItems}"
                                  SelectedItem="{Binding SelectedTarget.Value, Mode=TwoWay}"
                                  Margin="8 0 0 0"
                                  HorizontalAlignment="Stretch"
                                  TabIndex="1"
                                  IsTabStop="True"
                                  Width="120"
                                  VerticalAlignment="Center"
                          >
                        </ComboBox>
                    </Border>

                    <!-- 検索 -->
                    <StackPanel Orientation="Horizontal">

                        <TextBox Text="{Binding SearchText.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="32"
                                 Width="160"
                                 HorizontalAlignment="Stretch" 
                                 ext:TextBoxFocusExtensions.AutoSelectOnFocus="True"
                                 VerticalAlignment="Center"
                             >
                            <i:Interaction.Behaviors>
                                <mybehavior:KeyboardTrigger Key="Enter">
                                    <mybehavior:KeyboardTrigger.Actions>
                                        <core:InvokeCommandAction Command="{Binding DoSearchCommand}" />
                                    </mybehavior:KeyboardTrigger.Actions>
                                </mybehavior:KeyboardTrigger>
                            </i:Interaction.Behaviors>

                        </TextBox>

                        <Button Content="検索" 
                                Command="{Binding DoSearchCommand}"
                                Margin="8 0"
                                VerticalAlignment="Center"
                                Width="80"
                                />

                    </StackPanel>


                </toolkit:DockPanel>

                <toolkit:DockPanel toolkit:DockPanel.Dock="Top">

                    <Border Width="54" />
                    <!-- Vidoe系検索のサーチオプション -->
                    <Border toolkit:DockPanel.Dock="Left" Margin="8 0">
                        <ComboBox ItemsSource="{Binding SearchOptioinItems}"
                                  DisplayMemberPath="Label"
                                  SelectedItem="{Binding SelectedSearchOption.Value, Mode=TwoWay}"
                                  Margin="0"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  TabIndex="2"
                                  IsTabStop="True"
                                  Width="150"
                              >

                        </ComboBox>

                    </Border>
                    
                    <Border />
                    
                </toolkit:DockPanel>

                <ContentControl Content="{Binding ContentVM.Value}" 
                        ContentTemplateSelector="{StaticResource SearchPageContentTemplateSelector}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        />


            </toolkit:DockPanel>
        </Border>
    </Grid>
</Page>
