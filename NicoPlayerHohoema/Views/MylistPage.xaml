<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.MylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:controls="using:NicoPlayerHohoema.Views.Controls"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Grid>
        <toolkit:DockPanel >


            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">

                <Border Background="{Binding ThemeColor, Converter={StaticResource ColorToBrush}}" Width="4" 
                    toolkit:DockPanel.Dock="Left"
                        Margin="0 0 8 0"
                    />


                <!-- 複数選択のON/OFF -->
                <controls:ListingSelectionControl 
                        Margin="8 0"
                        toolkit:DockPanel.Dock="Right"
                        />

                
                <StackPanel Orientation="Horizontal" toolkit:DockPanel.Dock="Left" 
                            >
                    <AppBarButton Icon="Edit"
                                  Label="マイリスト編集"
                                  Command="{Binding EditMylistGroupCommand}"
                                  Visibility="{Binding IsLoginUserOwnedMylist, Converter={StaticResource BooleanToVisibility}}"
                                    />
                    <AppBarToggleButton Icon="Favorite"
                                        IsChecked="{Binding IsFavoriteMylist.Value, Mode=TwoWay}"
                                        IsEnabled="{Binding CanChangeFavoriteMylistState.Value}"
                                        Label="お気に入り"
                                        Visibility="{Binding IsLoginUserOwnedMylist, Converter={StaticResource BooleanToVisibilityInverted}}"
                                    />

                    <Border Width="16" />

                    <HyperlinkButton Command="{Binding OpenUserPageCommand}"
                                     >
                        <TextBlock>
                            <Run Text="{Binding UserName}" />
                            <Run Text=" さんのマイリスト" />
                        </TextBlock>
                    </HyperlinkButton>

                    <TextBlock Text="非公開"
                               Margin="16 0"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsPublic, Converter={StaticResource BooleanToVisibilityInverted}}"
                               />
                </StackPanel>



                <Border>
                    <TextBlock Text=":)" Padding="16 8" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <i:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Tapped">
                                    <core:ChangePropertyAction TargetObject="{Binding ListViewVerticalOffset}" PropertyName="Value" Value="0" />
                                </core:EventTriggerBehavior>
                            </i:Interaction.Behaviors>

                    </TextBlock>
                </Border>


            </toolkit:DockPanel>

            <!-- 選択アクション -->
            <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" 
                               Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibility}}"
                                Height="72"
                                Margin="8 0"                               
                           >
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                        toolkit:DockPanel.Dock="Right"
                        >
                    <AppBarButton Icon="Copy" Label="マイリストコピー" Command="{Binding CopyMylistCommand}" />
                    <AppBarButton Icon="Preview" Label="マイリスト移動" Command="{Binding UnregistrationMylistCommand}" />
                    <AppBarSeparator />
                    <AppBarButton Icon="Remove" Label="マイリスト解除" Command="{Binding UnregistrationMylistCommand}" />
                    <StackPanel Orientation="Horizontal" Visibility="{Binding CanDownload, Converter={StaticResource BooleanToVisibility}}">
                        <AppBarSeparator />
                        <AppBarButton Icon="Download" Label="キャッシュ取得" Command="{Binding RequestCacheDownload}" />
                        <AppBarSeparator />
                        <AppBarButton Icon="Cancel" Label="キャッシュ取消" Command="{Binding CancelCacheDownloadRequest}" />
                    </StackPanel>

                </StackPanel>

                <Border />

            </toolkit:DockPanel>



            <controls:HohoemaIncrementalLoadingList />




        </toolkit:DockPanel>
    </Grid>
    
    
</Page>
