<UserControl
    x:Class="NicoPlayerHohoema.Views.Controls.IchibaItemCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:ichiba="using:Mntone.Nico2.Embed.Ichiba"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    d:DataContext="{d:DesignData Type=ichiba:IchibaItem}"
    >

    <Grid>
        <HyperlinkButton NavigateUri="{Binding AmazonItemLink}"  >
            <toolkit:DockPanel 
                                                      Width="120"
                                                      >

                <Image Source="{Binding ThumbnailUrl}"
                                                       Height="120"
                                                       toolkit:DockPanel.Dock="Top"
                                                       />

                <Border VerticalAlignment="Bottom"
                                                        Margin="8"
                                                        >
                    <Border.Background>
                        <SolidColorBrush Color="{StaticResource SystemAltMediumColor}" />
                    </Border.Background>
                    <TextBlock Text="{Binding Title}" 
                                                               TextWrapping="Wrap"
                                                               FontSize="13"
                                                               >
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{StaticResource SystemBaseMediumHighColor}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                </Border>

            </toolkit:DockPanel>

        </HyperlinkButton>
    </Grid>
</UserControl>
