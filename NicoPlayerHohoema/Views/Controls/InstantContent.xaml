<UserControl
    x:Class="NicoPlayerHohoema.Views.Controls.InstantContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    >

    
    
    
    <Grid x:Name="ContentContainer" Opacity="0.0"
          Background="{x:Bind Background}"
          Visibility="Collapsed"
          >
        <i:Interaction.Behaviors>
            <core:DataTriggerBehavior Binding="{x:Bind ContentContainer.Opacity, Mode=OneWay}" Value="0" ComparisonCondition="Equal" >
                <core:ChangePropertyAction TargetObject="{x:Bind ContentContainer}" PropertyName="Visibility">
                    <core:ChangePropertyAction.Value>
                        <Visibility>Collapsed</Visibility>
                    </core:ChangePropertyAction.Value>
                </core:ChangePropertyAction>
            </core:DataTriggerBehavior>

            <core:DataTriggerBehavior Binding="{x:Bind ContentContainer.Opacity, Mode=OneWay}" Value="0" ComparisonCondition="NotEqual" >
                <core:ChangePropertyAction TargetObject="{x:Bind ContentContainer}" PropertyName="Visibility" >
                    <core:ChangePropertyAction.Value>
                        <Visibility>Visible</Visibility>
                    </core:ChangePropertyAction.Value>
                </core:ChangePropertyAction>
            </core:DataTriggerBehavior>
        </i:Interaction.Behaviors>
        
        
        <ContentControl Content="{x:Bind DisplayContent, Mode=OneWay}"
                        ContentTemplate="{x:Bind DisplayContentTemplate}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        />
    </Grid>
</UserControl>
