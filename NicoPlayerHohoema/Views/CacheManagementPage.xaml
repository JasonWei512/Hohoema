<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.CacheManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:ext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:controls="using:NicoPlayerHohoema.Views.Controls"
    xmlns:iconPack="using:MahApps.Metro.IconPacks"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <Grid>
               
        <toolkit:DockPanel >


            <Border toolkit:DockPanel.Dock="Top" 
                    BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                    BorderThickness="0 0 0 1"
                    >
                <toolkit:DockPanel >


                    <StackPanel toolkit:DockPanel.Dock="Right" Margin="8 0"
                                Orientation="Horizontal"
                                >

                        <Button Command="{Binding ResumeCacheCommand}"
                                    Background="Transparent"
                                    ToolTipService.ToolTip="キャッシュ再開"
                                    >
                            <StackPanel Orientation="Horizontal">
                                <iconPack:PackIconMaterial Kind="Download" />
                            </StackPanel>
                        </Button>



                    </StackPanel>

                    <Border Background="Transparent" IsHitTestVisible="True"
                                Margin="24 0 0 0"
                                >

                        <TextBlock Text="{Binding Title}" 
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                    >
                                
                                <i:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="Tapped">
                                        <core:ChangePropertyAction TargetObject="{Binding ListViewVerticalOffset}" PropertyName="Value" Value="0" />
                                    </core:EventTriggerBehavior>
                                </i:Interaction.Behaviors>


                        </TextBlock>
                    </Border>




                </toolkit:DockPanel>
            </Border>

            <Border toolkit:DockPanel.Dock="Top" 
                    BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                    BorderThickness="0 0 0 1"
                    >
                <toolkit:DockPanel>

                    <Border toolkit:DockPanel.Dock="Right"
                            >
                        <ToggleButton Background="Transparent"
                                        IsChecked="{Binding IsSelectionModeEnable.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ToolTipService.ToolTip="選択"
                                        >
                            <iconPack:PackIconMaterial Kind="CheckboxMarkedOutline" />
                        </ToggleButton>


                    </Border>

                    <Border 
                            toolkit:DockPanel.Dock="Right"
                            BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                            BorderThickness="1 0 0 0"
                                Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                            >
                        <Button Background="Transparent" 
                                Command="{Binding RefreshCommand}"
                                ToolTipService.ToolTip="更新"
                                >
                            <SymbolIcon Symbol="Refresh" />
                        </Button>

                    </Border>







                    <Grid
                            
                        >
                        <toolkit:DockPanel Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibility}}"
                                        >

                            <StackPanel Orientation="Horizontal"
                                toolkit:DockPanel.Dock="Right"                                        
                                >

                                <Button Command="{Binding RegistratioMylistCommand}"
                                            Background="Transparent"
                                            >
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Add" />
                                        <TextBlock Text="マイリスト登録"
                                                   VerticalAlignment="Center"
                                                   />
                                    </StackPanel>
                                </Button>

                                <StackPanel Orientation="Horizontal" >
                                    <Button Command="{Binding CancelCacheDownloadRequest}"
                                            Background="Transparent"
                                            >
                                        <StackPanel Orientation="Horizontal">
                                            <SymbolIcon Symbol="Download" />
                                            <TextBlock Text="キャッシュ削除"
                                                VerticalAlignment="Center"
                                                />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                            </StackPanel>

                            <Border />

                        </toolkit:DockPanel>


                        <toolkit:DockPanel Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibilityInverted}}">

                            <!--
                            <Grid x:Name="SearchButtonBorder"
                                    BorderThickness="1"
                                    >
                                    
                                    
                                <TextBox x:Name="SearchTextBox"
                                    PlaceholderText="ページ内検索"
                                    InputScope="SearchIncremental"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    Height="47"
                                    Padding="24 8 0 8"
                                    Margin="0 0 48 0"
                                    BorderThickness="0"
                                    >

                                </TextBox>

                                <Button HorizontalAlignment="Right"
                                        Background="Transparent"
                                    >
                                    <SymbolIcon Symbol="Find"  />
                                </Button>
                            </Grid>
                            -->
                        </toolkit:DockPanel>

                    </Grid>




                </toolkit:DockPanel>
            </Border>

           

            <controls:HohoemaIncrementalLoadingList />


        </toolkit:DockPanel>


        <Grid Visibility="{Binding IsCacheUserAccepted, Converter={StaticResource BooleanToVisibilityInverted}}" 
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="#77FFFFFF"
              >
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Margin="4">キャッシュ機能を有効にするには</TextBlock>

                
                <TextBlock Margin="4">
                    <Run>「キャッシュ機能の利用に関する確認」への同意が必要です</Run>
                </TextBlock>


                <Button Content="「キャッシュ機能の利用に関する確認」を表示する" 
                        Command="{Binding OpenCacheSettingsCommand}" 
                        Margin="8 16 8 8"
                         />

            </StackPanel>
            
            
        </Grid>
    </Grid>
    
</Page>
