<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:controls="using:NicoPlayerHohoema.Views.Controls"
    xmlns:iconPack="using:MahApps.Metro.IconPacks"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    xmlns:win2d="win2d"
    mc:Ignorable="d">

    <Grid>

        <toolkit:DockPanel >



            <Border toolkit:DockPanel.Dock="Top" 
                    BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                    BorderThickness="0 0 0 1"
                    >
                <toolkit:DockPanel >


                    <StackPanel toolkit:DockPanel.Dock="Right" Margin="8 0"
                                Orientation="Horizontal"
                                >

                        <Button Background="Transparent" 
                                IsEnabled="{Binding HasItem.Value}"
                                ToolTipService.ToolTip="全ての履歴を削除"
                                >
                            <SymbolIcon Symbol="Delete" />

                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel Margin="8" Width="240">
                                        <TextBlock Margin="0 0 0 16"
                                               LineHeight="20"
                                               TextWrapping="Wrap"
                                               >
                                        <Run>視聴履歴を全て削除します</Run>
                                        <LineBreak />
                                        <Run>本当に削除してもいいですか？</Run>
                                        </TextBlock>

                                        <Button Content="本当に削除" 
                                            Command="{Binding RemoveAllHistoryCommand}"
                                            HorizontalAlignment="Stretch"
                                            />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>

                    </StackPanel>

                    <Border Background="Transparent" IsHitTestVisible="True"
                            Margin="24 0 0 0"
                            >

                        <TextBlock Text="{Binding Title}" 
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                    >
                                
                        <i:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="Tapped">
                                <core:ChangePropertyAction TargetObject="{Binding ListViewVerticalOffset}" PropertyName="Value" Value="0" />
                            </core:EventTriggerBehavior>
                        </i:Interaction.Behaviors>


                        </TextBlock>
                    </Border>




                </toolkit:DockPanel>
            </Border>

            <Border toolkit:DockPanel.Dock="Top" 
                    BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                    BorderThickness="0 0 0 1"
                    >
                <toolkit:DockPanel>

                    <Border toolkit:DockPanel.Dock="Right"
                            >
                        <ToggleButton Background="Transparent"
                                        IsChecked="{Binding IsSelectionModeEnable.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ToolTipService.ToolTip="選択"
                                        >
                            <iconPack:PackIconMaterial Kind="CheckboxMarkedOutline" />
                        </ToggleButton>


                    </Border>

                    <StackPanel 
                            toolkit:DockPanel.Dock="Right"
                            BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                            BorderThickness="1 0 0 0"
                                Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                        Orientation="Horizontal"
                            >
                        <Button Background="Transparent" 
                                Command="{Binding RefreshCommand}"
                                IsEnabled="{Binding CanChangeSort.Value}"
                                ToolTipService.ToolTip="更新"
                                >
                            <SymbolIcon Symbol="Refresh" />
                        </Button>

                        
                                                
                    </StackPanel>







                    <Grid
                            
                        >
                        <toolkit:DockPanel Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibility}}"
                                        >

                            <StackPanel Orientation="Horizontal"
                                toolkit:DockPanel.Dock="Right"                                        
                                >
                                <Button Command="{Binding RegistratioMylistCommand}"
                                            Background="Transparent"
                                        Visibility="{Binding IsLoginUserOwnedMylist, Converter={StaticResource BooleanToVisibilityInverted}}"
                                            >
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Add" />
                                        <TextBlock Text="マイリスト登録"
                                                   VerticalAlignment="Center"
                                                   />
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding RemoveHistoryCommand}"
                                        Background="Transparent"
                                            >
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Remove" />
                                        <TextBlock Text="視聴履歴削除"
                                                   VerticalAlignment="Center"
                                                   />
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding RequestCacheDownload}"
                                        Visibility="{Binding CanDownload, Converter={StaticResource BooleanToVisibility}}"
                                        Background="Transparent"
                                        >
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Download" />
                                        <TextBlock Text="キャッシュ"
                                            VerticalAlignment="Center"
                                            />
                                    </StackPanel>
                                </Button>

                            </StackPanel>

                            <Border />

                        </toolkit:DockPanel>


                        <toolkit:DockPanel Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibilityInverted}}">

                            
                            <!--
                            <Grid x:Name="SearchButtonBorder"
                                    BorderThickness="1"
                                    >
                                    
                                    
                                <TextBox x:Name="SearchTextBox"
                                    PlaceholderText="ページ内検索"
                                    InputScope="SearchIncremental"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    Height="47"
                                    Padding="24 8 0 8"
                                    Margin="0 0 48 0"
                                    BorderThickness="0"
                                    >

                                </TextBox>

                                <Button HorizontalAlignment="Right"
                                        Background="Transparent"
                                    >
                                    <SymbolIcon Symbol="Find"  />
                                </Button>
                            </Grid>
                            -->
                        </toolkit:DockPanel>


                    </Grid>

                </toolkit:DockPanel>
            </Border>



            <controls:HohoemaIncrementalLoadingList />



        </toolkit:DockPanel>
    </Grid>
    
    
</Page>
