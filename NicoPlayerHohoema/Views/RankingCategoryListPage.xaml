<Page
     
    x:Class="NicoPlayerHohoema.Views.RankingCategoryListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:controls="using:NicoPlayerHohoema.Views.Controls"
    xmlns:toolkitext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:deviceTrigger="using:AdaptiveTriggerLibrary.Triggers.HardwareInterfaceTriggers"
    xmlns:uwpui="using:Microsoft.Toolkit.Uwp.UI.Extensions"
    xmlns:iconPack="using:MahApps.Metro.IconPacks"
    xmlns:uwpcontrol="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d"
    >

    

    <Grid x:Name="ContentLayoutRoot">


        <VisualStateManager.VisualStateGroups>

            
            <VisualStateGroup x:Name="XboxState">

                <VisualState>
                    <VisualState.StateTriggers>
                        <deviceTrigger:DeviceFamilyTrigger Condition="Xbox" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ContentLayout.Margin" Value="0 27 0 0" />

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>


        </VisualStateManager.VisualStateGroups>

        
        <toolkit:DockPanel x:Name="ContentLayout">

            <Border toolkit:DockPanel.Dock="Top" 
                    >
            </Border>

            <uwpcontrol:MasterDetailsView ItemsSource="{Binding SortedRankingCategoryItems}"
                                          SelectedItem="{Binding SelectedRankingCategory.Value, Mode=TwoWay}"
                                          MasterPaneWidth="200"
                                          >

                <uwpcontrol:MasterDetailsView.MasterHeader>
                    <StackPanel ContextFlyout="{x:Null}">

                        <toolkit:DockPanel>

                            <Button toolkit:DockPanel.Dock="Right"
                                    Background="Transparent"
                                    >

                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="好きなカテゴリを編集"
                                                        Command="{Binding AddFavRankingCategory}"
                                                        />
                                        <MenuFlyoutItem Text="非表示カテゴリを編集"
                                                        Command="{Binding AddDislikeRankingCategory}"
                                                        />
                                    </MenuFlyout>
                                </Button.Flyout>
                                <SymbolIcon Symbol="Setting" />
                            </Button>

                            <TextBlock Text="ランキング一覧" Margin="8 0 0 0"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       />

                        </toolkit:DockPanel>
                    </StackPanel>
                </uwpcontrol:MasterDetailsView.MasterHeader>

                <uwpcontrol:MasterDetailsView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Category, Converter={StaticResource RankingCategoryToText}}"
                                   Visibility="{Binding IsFavorit, Converter={StaticResource BooleanToVisibility}}"
                                       FontWeight="ExtraBold"
                                   />
                            <TextBlock Text="{Binding Category, Converter={StaticResource RankingCategoryToText}}"
                                   Visibility="{Binding IsFavorit, Converter={StaticResource BooleanToVisibilityInverted}}"
                                       Opacity="0.9"
                                   />
                        </Grid>
                    </DataTemplate>
                </uwpcontrol:MasterDetailsView.ItemTemplate>

                <uwpcontrol:MasterDetailsView.DetailsTemplate>
                    <DataTemplate>
                        <!-- Note: MasterDetailsView.DetailsTemplate は別コントロール扱いになるため、
                                   バインディングやVisualState等を別に組む必要がある 
                        -->
                        <UserControl>

                            <Grid DataContext="{Binding ElementName=ContentLayoutRoot, Path=DataContext}"
                                  x:Name="VideoListContentLayout"
                                           >

                                <VisualStateManager.VisualStateGroups>

                                    <VisualStateGroup x:Name="SelectionStateGroup">

                                        <VisualState>
                                            <VisualState.StateTriggers>
                                                <StateTrigger IsActive="{Binding ElementName=ContentLayoutRoot, Path=DataContext.IsSelectionModeEnable.Value}" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Target="RefreshButton.Visibility" Value="Collapsed" />

                                                <Setter Target="RequestCacheButton.Visibility" Value="Visible" />
                                                <Setter Target="RegistrationMylistButton.Visibility" Value="Visible" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>

                                    <VisualStateGroup x:Name="TVModeStateGroup">

                                        <VisualState>
                                            <VisualState.StateTriggers>
                                                <StateTrigger IsActive="{Binding ElementName=ContentLayoutRoot, Path=DataContext.IsForceTVModeEnable.Value}" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Target="VerticalVideoList.Visibility" Value="Collapsed" />
                                                <Setter Target="HorizontalVideoList.Visibility" Value="Visible" />


                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>


                                    <VisualStateGroup x:Name="XboxSafeAreaState">

                                        <VisualState>
                                            <VisualState.StateTriggers>
                                                <deviceTrigger:DeviceFamilyTrigger Condition="Xbox" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>

                                                <Setter Target="VideoListCommandBar.Margin" Value="0 0 48 0" />
                                                <Setter Target="HorizontalVideoList.Padding" Value="0 0 48 0" />

                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>


                                </VisualStateManager.VisualStateGroups>
                                <Grid >
                                    <controls:HohoemaIncrementalLoadingList
                                            x:Name="VerticalVideoList"
                                            Margin="0 48 0 0"
                                              >
                                        <controls:HohoemaIncrementalLoadingList.ItemTemplate>
                                            <DataTemplate >
                                                <controls:RankingCategoryListItem />
                                            </DataTemplate>
                                        </controls:HohoemaIncrementalLoadingList.ItemTemplate>
                                    </controls:HohoemaIncrementalLoadingList>

                                    <controls:IncrementalLoadingList x:Name="HorizontalVideoList"
                                            ItemsSource="{Binding IncrementalLoadingItems}"
                                            SelectedItems="{Binding SelectedItems, Mode=TwoWay}"
                                            ItemCommand="{StaticResource OpenContentCommand}"
                                            IsSelectionEnabled="{Binding IsSelectionModeEnable.Value}"
                                            Margin="8 0 0 0"
                                            Padding="0 0 8 0"
                                            IsTabStop="False"
                                                Visibility="Collapsed"
                                                                 
                                                 >
                                        <controls:IncrementalLoadingList.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0 0 0 0">

                                                    <controls:VideoInfoControl_TV />

                                                    <Grid >
                                                        <TextBlock Text="{Binding Rank, Mode=OneTime}" 
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Top"
                                                                   Margin="16 0"
                                                                   Style="{StaticResource SubheaderTextBlockStyle}"
                                                                   LineStackingStrategy="BlockLineHeight"
                                                                   FontWeight="SemiBold"
                                                                   />
                                                    </Grid>


                                                </Grid>
                                            </DataTemplate>
                                        </controls:IncrementalLoadingList.ItemTemplate>

                                        <controls:IncrementalLoadingList.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid Orientation="Horizontal"
                                                       Margin="0 48 0 27"
                                                       />
                                            </ItemsPanelTemplate>
                                        </controls:IncrementalLoadingList.ItemsPanel>

                                    </controls:IncrementalLoadingList>
                                </Grid>

                                <Border Margin="0">
                                    <CommandBar x:Name="VideoListCommandBar" Background="Transparent">

                                        <CommandBar.Content>
                                            <StackPanel Orientation="Horizontal">

                                                <Button Command="{Binding UnselectCategoryCommand}"     
                                                        Background="Transparent"
                                                        >
                                                    <SymbolIcon Symbol="Clear" Opacity="0.7" />
                                                </Button>

                                                <Border Background="Transparent" IsHitTestVisible="True"
                                                        Margin="16 0 0 0"
                                                        >
                                                    <TextBlock 
                                                            VerticalAlignment="Center"
                                                            Style="{StaticResource SubtitleTextBlockStyle}"
                                                            >
                                                『<Run Text="{Binding SelectedRankingCategory.Value.Category, Converter={StaticResource RankingCategoryToText}}" />』のランキング
                                                    </TextBlock>

                                                    <i:Interaction.Behaviors>
                                                        <core:EventTriggerBehavior EventName="Tapped">
                                                            <core:ChangePropertyAction TargetObject="{Binding ListViewVerticalOffset}" PropertyName="Value" Value="0.0" />
                                                        </core:EventTriggerBehavior>
                                                    </i:Interaction.Behaviors>
                                                </Border>
                                            </StackPanel>
                                        </CommandBar.Content>

                                        <AppBarButton Label="更新" 
                                                      Icon="Refresh"
                                                       Command="{Binding RefreshCommand}"
                                                      IsEnabled="{Binding CanChangeSort.Value}"
                                                      x:Name="RefreshButton"
                                                      VerticalAlignment="Center"
                                                    >
                                        </AppBarButton>

                                        <!-- 選択中のみ表示する -->
                                        <AppBarButton Command="{Binding RequestCacheDownload}"
                                                  IsEnabled="{Binding CanDownload}"
                                                  Background="Transparent"
                                                  Label="キャッシュ"
                                                  Icon="Download"
                                                  Visibility="Collapsed"
                                                  x:Name="RequestCacheButton"
                                                  VerticalAlignment="Center"
                                                >
                                        </AppBarButton>


                                        <AppBarButton Command="{Binding RegistratioMylistCommand}"
                                                      Label="マイリストに追加"
                                                      Icon="Add"
                                                      Visibility="Collapsed"
                                                      x:Name="RegistrationMylistButton"
                                                      VerticalAlignment="Center"
                                                    >
                                        </AppBarButton>


                                        <!-- 選択切り替えボタン -->
                                        <AppBarToggleButton IsChecked="{Binding IsSelectionModeEnable.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            HorizontalContentAlignment="Stretch"
                                                            VerticalContentAlignment="Stretch"
                                                            Label="選択"
                                                            VerticalAlignment="Center"
                                            >
                                            <iconPack:PackIconMaterial Kind="CheckboxMarkedOutline" 
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       />
                                        </AppBarToggleButton>

                                    </CommandBar>
                                </Border>
                                

                            </Grid>
                        </UserControl>
                        
                    </DataTemplate>
                    
                </uwpcontrol:MasterDetailsView.DetailsTemplate>
                
                
            </uwpcontrol:MasterDetailsView>
            
            
            
        </toolkit:DockPanel>





    </Grid>
</Page>
