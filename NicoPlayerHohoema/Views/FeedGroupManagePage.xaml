<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.FeedGroupManagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:ext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:controls="using:NicoPlayerHohoema.Views.Controls"
    xmlns:iconPack="using:MahApps.Metro.IconPacks"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    
    
    <Page.Resources>

        <Style x:Key="FeedItemSourceTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Opacity" Value="0.7" />
        </Style>
        

        <DataTemplate x:Key="TagFeedItemSourceTemplate">
            <Border Margin="8 0">
                <TextBlock Text="{Binding Name}" 
                           Style="{StaticResource FeedItemSourceTextBlockStyle}"
                           VerticalAlignment="Center"
                           />
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="MylistFeedItemSourceTemplate">
            <Border Margin="8 0">
                <TextBlock Text="{Binding Name}"
                           Style="{StaticResource FeedItemSourceTextBlockStyle}"
                           VerticalAlignment="Center"
                           />
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="UserFeedItemSourceTemplate">
            <Border Margin="8 0">
                <TextBlock Text="{Binding Name}"
                           Style="{StaticResource FeedItemSourceTextBlockStyle}"
                           VerticalAlignment="Center"
                           />
            </Border>
        </DataTemplate>


        <local:FeedItemSourceTemplateSelector x:Key="feedItemSourceTemplateSelector"
                                              Tag="{StaticResource TagFeedItemSourceTemplate}"
                                              Mylist="{StaticResource MylistFeedItemSourceTemplate}"
                                              User="{StaticResource UserFeedItemSourceTemplate}"
            />
    </Page.Resources>

    <local:MenuNavigatePageBase>

        <toolkit:DockPanel >

            <Border toolkit:DockPanel.Dock="Top" 
                    BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                    BorderThickness="0 0 0 1"
                    >
                <toolkit:DockPanel >


                    <StackPanel toolkit:DockPanel.Dock="Right" Margin="8 0"
                                Orientation="Horizontal"
                                >

                        <Button Command="{Binding CreateFeedGroupCommand}"
                                Background="Transparent"
                                ToolTipService.ToolTip="フィードグループを作成"
                                >
                            <StackPanel Orientation="Horizontal">
                                <iconPack:PackIconMaterial Kind="Plus" />
                            </StackPanel>
                        </Button>

                        <Border Width="8" />

                        <Button Command="{Binding RefreshAllFeedGroupCommand}"
                                Background="Transparent"
                                >
                            <StackPanel Orientation="Horizontal">
                                <iconPack:PackIconMaterial Kind="Refresh" />
                            </StackPanel>
                        </Button>



                    </StackPanel>

                    <Border Background="Transparent" IsHitTestVisible="True"
                                Margin="24 0 0 0"
                                >
                        <!-- 
                        <TextBlock Text="{Binding Title}" 
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                   
                                    >
                                

                        </TextBlock>
                        
                        -->
                        
                    </Border>




                </toolkit:DockPanel>
            </Border>

            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">

                <StackPanel Orientation="Horizontal" toolkit:DockPanel.Dock="Left" Margin="0">

                </StackPanel>

                
                
                <Border />
                
            </toolkit:DockPanel>


            <Border Visibility="{Binding HasFeedGroupItems.Value, Converter={StaticResource BooleanToVisibilityInverted}}" 
                    Margin="8"
                    toolkit:DockPanel.Dock="Top"
                    >

                <ItemsControl>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel></StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                                        
                    
                    <TextBlock FontSize="20">
                        <Run>右上にある ＋ボタン からフィードグループを作成しましょう。</Run>
                        <LineBreak />
                    </TextBlock>

                    <Border BorderBrush="White" BorderThickness="0 1 0 0" HorizontalAlignment="Stretch"
                            Margin="0 8"
                            />
                    
                    <TextBlock Margin="8 8">
                        <Bold>フィードとは？</Bold>
                    </TextBlock>
                    
                    <TextBlock TextWrapping="Wrap"
                               Margin="16 0"
                               LineHeight="30"
                               >
                        <Run>情報の流れをひとまとめにして最新情報を一覧表示する機能をインターネットでは「フィード」と呼んだりします。</Run>
                        <LineBreak />
                        <Run>Hohoemaでは、「マイリストの動画」「タグによる動画検索の結果」「ユーザー投稿動画」を時系列でひとまとめにしてチェックできる機能のことを「フィード」として扱っています。</Run>
                        <LineBreak />
                        <Run>また、Hohoemaに登場する「フィードグループ」はフィードに名前をつけて管理するためのものです。興味のあるジャンルごとに分けてフィードグループを作ってみるとチェックが楽になりますよ。</Run>
                    </TextBlock>


                </ItemsControl>
                
            </Border>


            <ListView ItemsSource="{Binding FeedGroupItems}"
                      IsMultiSelectCheckBoxEnabled="{Binding IsSelectionModeEnable.Value}"
                      SelectedItem="{Binding SelectedFeedGroupItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectionMode="Single"
                  >

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" 
                                        />
                        <Setter Property="Margin"
                                    Value="8 0 8 0" 
                                    />
                    </Style>
                </ListView.ItemContainerStyle>


                <ListView.ItemTemplate>

                    <DataTemplate>

                        <toolkit:DockPanel Height="48" Margin="0 8">

                            <StackPanel toolkit:DockPanel.Dock="Right"
                                            Orientation="Horizontal"
                                            >


                                <ProgressRing IsActive="{Binding NowUpdate.Value}"
                                               Visibility="{Binding NowUpdate.Value, Converter={StaticResource BooleanToVisibility}}"
                                                  Width="24"
                                                  Height="24"
                                                  />

                                <StackPanel Margin="8 0">
                                    <TextBlock VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                                >
                                                <Run Text="{Binding UnreadItemCount}" />
                                    </TextBlock>
                                    
                                    <TextBlock VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                               >
                                        <Run Text="最終更新:" />
                                        <Run Text="{Binding LastUpdate.Value, Converter={StaticResource ToRelationalTime}}" />
                                    </TextBlock>

                                </StackPanel>

                                <AppBarButton Icon="Edit" 
                                            IsCompact="True"
                                            Command="{Binding SecondaryActionCommand}"
                                            />


                            </StackPanel>





                            <toolkit:DockPanel Background="Transparent" IsHitTestVisible="True" >


                                <i:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="Tapped">
                                        <core:InvokeCommandAction Command="{Binding ElementName=PageRoot, Path=DataContext.OpenFeedVideoPageCommand}"
                                                          CommandParameter="{Binding}"
                                                          />
                                    </core:EventTriggerBehavior>
                                </i:Interaction.Behaviors>

                                <ItemsControl ItemsSource="{Binding SourceItems}"
                                          ItemTemplateSelector="{StaticResource feedItemSourceTemplateSelector}"
                                              toolkit:DockPanel.Dock="Bottom"
                                              VerticalAlignment="Top"
                                            >
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <toolkit:WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    
                                    

                                </ItemsControl>

                                
                                <StackPanel>
                                    <TextBlock Text="{Binding Label}" 
                                               VerticalAlignment="Center"
                                               />

                                </StackPanel>



                            </toolkit:DockPanel>


                        </toolkit:DockPanel>
                    </DataTemplate>

                </ListView.ItemTemplate>
            </ListView>



        </toolkit:DockPanel>


        
    </local:MenuNavigatePageBase>

</Page>
