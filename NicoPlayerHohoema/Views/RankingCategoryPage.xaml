<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.RankingCategoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <Grid>
        <Border>
            <toolkit:DockPanel>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" >
                    
                    <!-- 複数選択のON/OFF -->
                    <StackPanel Orientation="Horizontal" Margin="8"
                                toolkit:DockPanel.Dock="Right"
                                >
                        <Button Content="複数選択を始める..."
                        Command="{Binding EnableSelectionCommand}"
                        Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                        />
                        <Button Content="複数選択を終わる..."
                        Command="{Binding DisableSelectionCommand}"
                        Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibility}}"
                        />

                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding CanChangeRankingParameter.Value, Converter={StaticResource BooleanToVisibility}}"
                                >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="対象" 
                                       VerticalAlignment="Center"
                                       Margin="8 0"
                                       />
                            <ComboBox ItemsSource="{Binding RankingTargetItems}"
                                      SelectedItem="{Binding SelectedRankingTarget.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="Label"
                                      MinWidth="80"
                                      />
                        </StackPanel>

                        <Border Width="32" />

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="集計期間"
                                       VerticalAlignment="Center"
                                       Margin="8 0"
                                       />
                            <ComboBox ItemsSource="{Binding RankingTimeSpanItems}"
                                      SelectedItem="{Binding SelectedRankingTimeSpan.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="Label"
                                      MinWidth="80"
                                      />
                        </StackPanel>
                    </StackPanel>


                   
                </toolkit:DockPanel>



          
                <!-- 選択アクション -->
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" 
                           Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibility}}"
                           >
                    <StackPanel Orientation="Horizontal"
                        toolkit:DockPanel.Dock="Right"
                        >
                        <AppBarButton Icon="Play" IsCompact="False" Content="連続再生" Command="{Binding PlayAllCommand}" />
                        <AppBarSeparator />
                        <AppBarButton Icon="Download" Content="キャッシュを取得" Command="{Binding RequestCacheDownload}" />
                        <AppBarButton Icon="Remove" Content="キャッシュを削除" Command="{Binding DeleteCache}" />
                        <AppBarButton Icon="Cancel" Content="キャッシュを中止" Command="{Binding CancelCacheDownloadRequest}"  />
                    </StackPanel>

                    <Border />

                </toolkit:DockPanel>



                <ListView ItemsSource="{Binding IncrementalLoadingItems}"
                          SelectionMode="{Binding SelectionMode.Value}"
                          IsMultiSelectCheckBoxEnabled="False"
                          IncrementalLoadingTrigger="Edge"
                              >

                    <i:Interaction.Behaviors>
                        <mybehavior:ListViewSelectedItemsGetter SelectedItems="{Binding SelectedVideoInfoItems, Mode=TwoWay}" />
                        
                        <mybehavior:ListViewVerticalOffsetGetter
                            VerticalOffset="{Binding ListViewVerticalOffset.Value, Mode=TwoWay}"
                            />
                    </i:Interaction.Behaviors>
                    
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" 
                                        />
                            <Setter Property="Margin"
                                    Value="0 0 0 8" 
                                    />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="Transparent"
                                  IsHitTestVisible="True"
                                  >
                                <i:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="Tapped">
                                        <core:InvokeCommandAction Command="{Binding ElementName=PageRoot, Path=DataContext.PlayCommand}"                                                                      
                                                                  CommandParameter="{Binding}"
                                                                      />
                                    </core:EventTriggerBehavior>
                                </i:Interaction.Behaviors>

                                <view:VideoInfoControl />

                                
                                <TextBlock Text="{Binding Rank, Mode=OneTime}" 
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           FontSize="45"
                                           Foreground="#55777777"
                                           Margin="2 0"
                                           LineStackingStrategy="MaxHeight"
                                           />
                                
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </toolkit:DockPanel>
        </Border>
    </Grid>
</Page>
