<Page
    x:Class="NicoPlayerHohoema.Views.RankingCategoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <Grid>
        

        <Border>
            <toolkit:DockPanel>
                <Border toolkit:DockPanel.Dock="Top" 
                        Visibility="{Binding CanChangeRankingParameter.Value, Converter={StaticResource BooleanToVisibility}}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="対象" 
                                       VerticalAlignment="Center"
                                       Margin="8 0"
                                       />
                            <ComboBox ItemsSource="{Binding RankingTargetItems}"
                                      SelectedItem="{Binding SelectedRankingTarget.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="Label"
                                      MinWidth="80"
                                      />
                        </StackPanel>

                        <Border Width="32" />

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="集計期間"
                                       VerticalAlignment="Center"
                                       Margin="8 0"
                                       />
                            <ComboBox ItemsSource="{Binding RankingTimeSpanItems}"
                                      SelectedItem="{Binding SelectedRankingTimeSpan.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="Label"
                                      MinWidth="80"
                                      />
                        </StackPanel>
                    </StackPanel>
                </Border>


                <ListView ItemsSource="{Binding RankingItems}"
                         SelectionMode="Multiple"
                         IncrementalLoadingTrigger="Edge"
                              >
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                        Value="Stretch" 
                                        />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <view:VideoInfoControl />

                                
                                <TextBlock Text="{Binding Rank, Mode=OneTime}" 
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           FontSize="45"
                                           Foreground="#55777777"
                                           Margin="2 0"
                                           LineStackingStrategy="MaxHeight"
                                           />
                                
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </toolkit:DockPanel>
        </Border>
    </Grid>
</Page>
