<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.UserMylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:toolkitext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:mycontrols="using:NicoPlayerHohoema.Views.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:hohoemaListitem="using:NicoPlayerHohoema.Views.HohoemaListItem"
    xmlns:iconPack="using:MahApps.Metro.IconPacks"
    xmlns:uwptoolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:uwpui="using:Microsoft.Toolkit.Uwp.UI.Extensions"
    xmlns:hardTrigger="using:AdaptiveTriggerLibrary.Triggers.HardwareInterfaceTriggers"
    xmlns:myTrigger="using:NicoPlayerHohoema.Views.StateTrigger"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="MylistTemplate">
            <Border >
                <hohoemaListitem:HohoemaListItemVideo />
            </Border>
        </DataTemplate>

        <Style TargetType="ListViewItem" x:Key="MylistListViewContainerStyle">
            <Setter Property="Padding" Value="0 8" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}" />
            <Setter Property="BorderThickness" Value="0 0 0 1" />
        </Style>
    </Page.Resources>


    <Grid>

        <VisualStateManager.VisualStateGroups>

            <!-- トップバー表示時のタイトル位置ずらし -->
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{Binding IsForceTVModeEnable.Value}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TitleLayout.Margin" Value="48 0 0 0" />
                        <Setter Target="ContentItemsView.Padding" Value="48 0 48 27" />

                        <Setter Target="TVModeMarginBordar.Height" Value="27"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource DesktopWindowWidthBreakPoint}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="TitleLayout.Margin" Value="48 0 0 0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{Binding IsLoginUserMylist.Value}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LoginUserMylistActions.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

        </VisualStateManager.VisualStateGroups>
        
        
        
        <Grid x:Name="ContentLayout">


            <GridView ItemsSource="{Binding IncrementalLoadingItems}" 
                      uwpui:ListViewBase.Command="{StaticResource OpenContentCommand}"
                      IsItemClickEnabled="True"
                      SelectionMode="None"
                      x:Name="ContentItemsView"
                      Padding="8 0 8 24"
                      IncrementalLoadingTrigger="Edge"
                      IncrementalLoadingThreshold="80"
                >

                <GridView.Header>
                    <uwptoolkit:ScrollHeader Mode="Sticky">

                        <Grid x:Name="HeaderLayout"
                          VerticalAlignment="Top"
                          >

                            <Border Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                            Opacity="0.75"
                            />

                            <StackPanel>

                                <Border x:Name="TVModeMarginBordar" />

                                <Border Height="{StaticResource TitleBarDummyHeight}" />

                                <toolkit:DockPanel >
                                    <CommandBar toolkit:DockPanel.Dock="Right" 
                                            Background="Transparent"
                                        >

                                        <AppBarButton Background="Transparent" 
                                                      Label="並べ替え"
                                                      Icon="Sort"
                                                      Visibility="Collapsed"
                                            >
                                            <AppBarButton.Flyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="並び替えをリセット"
                                                            Command="{Binding ResetSortCommand}"
                                                        />
                                                    
                                                    <!--
                                                    <MenuFlyoutItem Text="作成日（新）"
                                                            Command="{Binding SortAscendingCommand}"
                                                                    CommandParameter=""
                                                        />
                                                    <MenuFlyoutItem Text="作成日（古）"
                                                            Command="{Binding SortDescendingCommand}"
                                                        />
                                                    -->

                                                    <MenuFlyoutItem Text="タイトル（順）"
                                                            Command="{Binding SortAscendingCommand}"
                                                                    CommandParameter="Label"
                                                        />
                                                    <MenuFlyoutItem Text="タイトル（逆）"
                                                            Command="{Binding SortDescendingCommand}"
                                                                    CommandParameter="Label"
                                                        />
                                                    <MenuFlyoutItem Text="アイテム数（大）"
                                                            Command="{Binding SortAscendingCommand}"
                                                                    CommandParameter="Count"
                                                        />
                                                    <MenuFlyoutItem Text="アイテム数（小）"
                                                            Command="{Binding SortDescendingCommand}"
                                                                    CommandParameter="Count"
                                                        />
                                                </MenuFlyout>
                                            </AppBarButton.Flyout>


                                            <SymbolIcon Symbol="Sort" />


                                        </AppBarButton>

                                        <AppBarButton Background="Transparent" 
                                                      Label="追加"
                                                      Icon="Add"
                                                    Visibility="Collapsed"
                                                    x:Name="LoginUserMylistActions"
                                            >
                                            <AppBarButton.Flyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="ローカルマイリストを作成"
                                                    Command="{Binding AddLocalMylistCommand}"
                                                    />
                                                    <MenuFlyoutItem Text="マイリストを作成"
                                                    Command="{Binding AddMylistGroupCommand}"
                                                    />
                                                </MenuFlyout>
                                            </AppBarButton.Flyout>
                                        </AppBarButton>
                                    </CommandBar>

                                    <Border Background="Transparent" IsHitTestVisible="True"
                                        Margin="16 0 0 0"
                                        Height="48"
                                    >
                                        <TextBlock Text="{Binding Title}" 
                                               VerticalAlignment="Center"
                                               Style="{StaticResource TitleTextBlockStyle}"
                                               x:Name="TitleLayout"
                                    >
                                        </TextBlock>
                                    </Border>
                                </toolkit:DockPanel>
                            </StackPanel>
                        </Grid>
                    </uwptoolkit:ScrollHeader>

                </GridView.Header>

                <i:Interaction.Behaviors>
                    <mybehavior:ListViewBaseItemContextFlyout />
                </i:Interaction.Behaviors>

                <GridView.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="全て再生"
                                        Command="{Binding ElementName=ContentLayout, Path=DataContext.PlayAllCommand}"
                                        CommandParameter="{Binding}"
                                        />
                        <!--
                        <MenuFlyoutItem Text="名前を変更"
                                        Command="{Binding ElementName=ContentLayout, Path=DataContext.EditMylistGroupCommand}"
                                        CommandParameter="{Binding}"
                                        />
                        <MenuFlyoutItem Text="削除"
                                        Command="{Binding ElementName=ContentLayout, Path=DataContext.RemoveMylistGroupCommand}"
                                        CommandParameter="{Binding}"
                                        />
                        -->
                    </MenuFlyout>
                </GridView.ContextFlyout>


                <GridView.ItemTemplate>
                    <DataTemplate>
                        <UserControl>
                            <Grid Width="180"
                              Height="140"
                                  Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
                              >

                                <VisualStateManager.VisualStateGroups>

                                    <VisualStateGroup>
                                        <VisualState>
                                            <VisualState.StateTriggers>
                                                <myTrigger:EqualConditionStateTrigger Condition="Local" Value="{Binding Origin}" />
                                            </VisualState.StateTriggers>
                                            <VisualState.Setters>
                                                <Setter Target="OtherUserOwnedStatusText.Visibility" Value="Visible" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>

                                </VisualStateManager.VisualStateGroups>

                                <Image Source="{Binding ThumnailUrl}"
                                       VerticalAlignment="Top"
                                           />
                                <toolkit:DockPanel
                                
                                >
                                    <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom">

                                        <StackPanel Background="#66000000"
                                                    Padding="8"
                                                    >

                                            <TextBlock Text="{Binding Label}"   
                                                       TextWrapping="Wrap"
                                           />

                                            <Grid>
                                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                                           Opacity="0.7"
                                                           >
                                                    <Run Text="{Binding Count}" />
                                                </TextBlock>

                                                <TextBlock Text="Local"
                                                           x:Name="OtherUserOwnedStatusText"
                                                           Visibility="Collapsed"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Opacity="0.7"
                                                           HorizontalAlignment="Right"
                                                       />

                                            </Grid>

                                        </StackPanel>

                                    </toolkit:DockPanel>


                                    <Border />

                                </toolkit:DockPanel>

                            </Grid>
                        </UserControl>
                       
                    </DataTemplate>
                </GridView.ItemTemplate>

            </GridView>
        </Grid>
    </Grid>
    
</Page>
