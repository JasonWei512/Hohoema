<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.UserMylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:toolkitext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:iconPack="using:MahApps.Metro.IconPacks"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <local:MenuNavigatePageBase>
        <toolkit:DockPanel>

            <Border toolkit:DockPanel.Dock="Top" 
                    BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                    BorderThickness="0 0 0 1"
                Height="48"
                    >
                <toolkit:DockPanel >
                    <StackPanel toolkit:DockPanel.Dock="Right" Margin="8 0"
                                Orientation="Horizontal"
                                >
                        <Button Background="Transparent" 
                            Command="{Binding AddMylistGroupCommand}"
                            ToolTipService.ToolTip="マイリスト作成"
                            >
                            <SymbolIcon Symbol="Add" />
                        </Button>
                    </StackPanel>

                    <Border Background="Transparent" IsHitTestVisible="True"
                                Margin="24 0 0 0"
                                >

                        <TextBlock Text="{Binding Title}" 
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                    >
                        </TextBlock>
                    </Border>
                </toolkit:DockPanel>
            </Border>



            <ListView ItemsSource="{Binding MylistGroupItems}"
                      IsMultiSelectCheckBoxEnabled="{Binding IsSelectionModeEnable.Value}"
                      SelectionMode="Single"
                  >

                <i:Interaction.Behaviors>
                    <mybehavior:ListViewSelectedItemsGetter SelectedItems="{Binding SelectedMylistGroupItems}" />
                </i:Interaction.Behaviors>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" 
                                        />
                        <Setter Property="Margin"
                                    Value="0 0 0 8" 
                                    />
                    </Style>
                </ListView.ItemContainerStyle>


                <ListView.ItemTemplate>

                    <DataTemplate>

                        <Grid Height="48" Background="Transparent" IsHitTestVisible="True" Margin="0 8">

                            <i:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Tapped">
                                    <core:InvokeCommandAction Command="{Binding ElementName=PageRoot, Path=DataContext.OpenMylistCommand}"
                                                          CommandParameter="{Binding}"
                                                          />
                                </core:EventTriggerBehavior>
                            </i:Interaction.Behaviors>

                            <toolkit:DockPanel>


                                <Border Background="{Binding ThemeColor, Converter={StaticResource ColorToBrush}}"
                                        Width="8"
                                        Margin="8 0 16 0"
                                        VerticalAlignment="Stretch"
                                        toolkit:DockPanel.Dock="Left"
                                        >

                                </Border>


                                <Border toolkit:DockPanel.Dock="Right" Margin="0 0 8 0">
                                    <TextBlock VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                >
                                        <Run Text="{Binding ItemCount}" />
                                        <Run Text="件" />
                                    </TextBlock>
                                </Border>

                                <Border toolkit:DockPanel.Dock="Bottom" Margin="16 0 0 0" 
                                    >
                                    <TextBlock Foreground="Gray" FontSize="12"
                                           Text="{Binding Description}"
                                           MaxLines="2"
                                           >

                                    </TextBlock>
                                </Border>


                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center" />

                                    <SymbolIcon Symbol="People" Margin="16 0" 
                                                Visibility="{Binding IsPublic, Converter={StaticResource BooleanToVisibility}}"
                                                ToolTipService.ToolTip="公開マイリスト"
                                                />
                                </StackPanel>

                            </toolkit:DockPanel>


                        </Grid>
                    </DataTemplate>

                </ListView.ItemTemplate>
            </ListView>
        </toolkit:DockPanel>
    </local:MenuNavigatePageBase>
    
</Page>
