<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.UserMylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:toolkitext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:mycontrols="using:NicoPlayerHohoema.Views.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:iconPack="using:MahApps.Metro.IconPacks"
    xmlns:uwptoolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Grid>

        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!-- マウス操作時、または画面が大きい時 -->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DesktopUserMylist.Visibility" Value="Visible" />
                        <Setter Target="MobileUserMylist.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>

                <!-- 狭い -->
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DesktopUserMylist.Visibility" Value="Collapsed" />
                        <Setter Target="MobileUserMylist.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

        </VisualStateManager.VisualStateGroups>
        
        <toolkit:DockPanel>

            <Border toolkit:DockPanel.Dock="Top" 
                    BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                    BorderThickness="0 0 0 1"
                Height="64"
                    >
                <toolkit:DockPanel >
                    <StackPanel toolkit:DockPanel.Dock="Right" 
                                Orientation="Horizontal"
                                >
                        <Button Background="Transparent" 
                            Command="{Binding AddMylistGroupCommand}"
                            ToolTipService.ToolTip="マイリスト作成"
                            >
                            <SymbolIcon Symbol="Add" />
                        </Button>
                    </StackPanel>

                    <Border Background="Transparent" IsHitTestVisible="True"
                                Margin="16 0 0 0"
                                >
                        <TextBlock Text="{Binding Title}" 
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                    >
                        </TextBlock>
                    </Border>
                </toolkit:DockPanel>
            </Border>


            <Grid>

                <ListView ItemsSource="{Binding MylistGroupItems}"
                          IsMultiSelectCheckBoxEnabled="{Binding IsSelectionModeEnable.Value}"
                          SelectionMode="Single"
                          x:Name="DesktopUserMylist"
                          HorizontalAlignment="Center"
                          MaxWidth="960"
                          Margin="16 0 0 0"
                          IsTabStop="False"
                  >

                    <i:Interaction.Behaviors>
                        <mybehavior:ListViewSelectedItemsGetter SelectedItems="{Binding SelectedMylistGroupItems}" />
                    </i:Interaction.Behaviors>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" 
                                        />
                            <Setter Property="Margin"
                                    Value="0 0 16 16" 
                                    />
                            <Setter Property="Height"
                                    Value="240" 
                                    />
                            <Setter Property="Width"
                                    Value="280" 
                                    />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <toolkit:WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>

                        <DataTemplate>

                            <Grid Background="Transparent" IsHitTestVisible="True">
                                <i:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="Tapped">
                                        <core:InvokeCommandAction Command="{Binding PrimaryCommand}"
                                                        />
                                    </core:EventTriggerBehavior>
                                </i:Interaction.Behaviors>

                                <mycontrols:HohoemaListItem DisplayType="Card" />

                            </Grid>
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
                
                <ListView ItemsSource="{Binding MylistGroupItems}"
                      IsMultiSelectCheckBoxEnabled="{Binding IsSelectionModeEnable.Value}"
                      SelectionMode="Single"
                      x:Name="MobileUserMylist"
                  >

                    <i:Interaction.Behaviors>
                        <mybehavior:ListViewSelectedItemsGetter SelectedItems="{Binding SelectedMylistGroupItems}" />
                    </i:Interaction.Behaviors>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" 
                                        />
                            <Setter Property="Margin"
                                    Value="0 0 0 8" 
                                    />
                        </Style>
                    </ListView.ItemContainerStyle>


                    <ListView.ItemTemplate>

                        <DataTemplate>

                            <Grid Background="Transparent" IsHitTestVisible="True">
                                <i:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="Tapped">
                                        <core:InvokeCommandAction Command="{Binding PrimaryCommand}"
                                                          />
                                    </core:EventTriggerBehavior>
                                </i:Interaction.Behaviors>

                                <mycontrols:HohoemaListItem />

                            </Grid>
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
           
        </toolkit:DockPanel>
    </Grid>
    
</Page>
