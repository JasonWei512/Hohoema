<Page
    x:Name="PageRoot"
    x:Class="NicoPlayerHohoema.Views.UserMylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:toolkitext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <toolkit:DockPanel>

       
        <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="0 0 0 8">

            <StackPanel Orientation="Horizontal" toolkit:DockPanel.Dock="Left" Margin="8 0">
                <AppBarButton Icon="Add" Label="マイリスト作成" Command="{Binding AddMylistGroupCommand}" />
            </StackPanel>
            
            <!-- 複数選択のON/OFF -->
            <StackPanel Orientation="Horizontal" toolkit:DockPanel.Dock="Right"  Margin="8 0">
                <ToggleButton IsChecked="{Binding IsSelectionModeEnable.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Content="選択モード"
                              />
            </StackPanel>

            <Border />
        </toolkit:DockPanel>

        <toolkit:DockPanel >

                <!-- 選択アクション -->
            <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" 
                                   Height="72"
                                   Margin="8 0"
                            Visibility="{Binding IsSelectionModeEnable.Value, Converter={StaticResource BooleanToVisibility}}"                            
                               >
                <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                toolkit:DockPanel.Dock="Left"
                            >
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            toolkit:DockPanel.Dock="Right"
                            >
                    <AppBarButton Icon="Edit" 
                                  Label="マイリスト編集" 
                                  Command="{Binding EditMylistGroupCommand}"
                                  >
                    </AppBarButton>
                    <AppBarButton Icon="Remove" 
                                  Label="マイリスト削除" 
                                  Foreground="Red"
                                  IsEnabled="{Binding CanEditSelectedMylistGroups.Value}"
                                  >
                        <AppBarButton.Flyout>
                            <Flyout>
                                <StackPanel>

                                    <Button Content="削除する" 
                                            Command="{Binding RemoveMylistGroupCommand}"
                                            Margin="0 0 0 32" />

                                    <TextBlock Text="マイリストを削除します" FontWeight="Bold" Margin="0 8" />
                                    <TextBlock Text="マイリストの内容を復元することはできません" FontWeight="Bold" />
                                    
                                </StackPanel>
                            </Flyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>
                </StackPanel>

                <Border />

            </toolkit:DockPanel>


            <ListView ItemsSource="{Binding MylistGroupItems}"
                      IsMultiSelectCheckBoxEnabled="{Binding IsSelectionModeEnable.Value}"
                      SelectionMode="Single"
                  >

                <i:Interaction.Behaviors>
                    <mybehavior:ListViewSelectedItemsGetter SelectedItems="{Binding SelectedMylistGroupItems}" />
                </i:Interaction.Behaviors>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" 
                                        />
                        <Setter Property="Margin"
                                    Value="0 0 0 8" 
                                    />
                    </Style>
                </ListView.ItemContainerStyle>


                <ListView.ItemTemplate>

                    <DataTemplate>

                        <Grid Height="48" Background="Transparent" IsHitTestVisible="True" Margin="0 8">

                            <i:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Tapped">
                                    <core:InvokeCommandAction Command="{Binding ElementName=PageRoot, Path=DataContext.OpenMylistCommand}"
                                                          CommandParameter="{Binding}"
                                                          />
                                </core:EventTriggerBehavior>
                            </i:Interaction.Behaviors>

                            <toolkit:DockPanel>


                                <Border Background="{Binding ThemeColor, Converter={StaticResource ColorToBrush}}"
                                        Width="8"
                                        Margin="8 0 16 0"
                                        VerticalAlignment="Stretch"
                                        toolkit:DockPanel.Dock="Left"
                                        >
                                    
                                </Border>


                                <Border toolkit:DockPanel.Dock="Right" Margin="0 0 8 0">
                                    <TextBlock VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="Black"
                                                >
                                        <Run Text="{Binding ItemCount}" />
                                        <Run Text="件" />
                                    </TextBlock>
                                </Border>

                                <Border toolkit:DockPanel.Dock="Bottom" Margin="16 0 0 0" 
                                    >
                                    <TextBlock Foreground="Gray" FontSize="12"
                                           Text="{Binding Description}"
                                           MaxLines="2"
                                           >

                                    </TextBlock>
                                </Border>


                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center" />

                                    <SymbolIcon Symbol="People" Margin="16 0" 
                                                Visibility="{Binding IsPublic, Converter={StaticResource BooleanToVisibility}}"
                                                ToolTipService.ToolTip="公開マイリスト"
                                                />
                                </StackPanel>

                            </toolkit:DockPanel>
                            

                        </Grid>
                    </DataTemplate>

                </ListView.ItemTemplate>
            </ListView>

        </toolkit:DockPanel>


    </toolkit:DockPanel>
</Page>
