<Page
    x:Class="NicoPlayerHohoema.Views.FeedGroupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:ext="using:WinRTXamlToolkit.Controls.Extensions"
    xmlns:iconPack="using:MahApps.Metro.IconPacks"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    >

    <Page.Resources>
        <DataTemplate x:Key="FeedSourceTemplate">
            <Button Content="{Binding Name}" MinWidth="120" Height="32">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel >

                            <TextBlock >
                                <Run Text="{Binding Name}"/>
                                <Run> を削除します</Run>
                            </TextBlock>

                            <Border Height="16" />

                            <Button Command="{Binding RemoveFeedSourceCommand}"
                                    HorizontalAlignment="Right"
                                    MinHeight="32"
                                    MinWidth="150"
                                    >
                                <StackPanel Orientation="Horizontal">
                                    <SymbolIcon Symbol="Delete" 
                                                />

                                    <TextBlock Text="削除"
                                               Margin="16 0"
                                               />

                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>

                <i:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <mybehavior:OpenFlyout />
                    </core:EventTriggerBehavior>
                </i:Interaction.Behaviors>

            </Button>
        </DataTemplate>
        
        
        
    </Page.Resources>


    <Grid>
        <toolkit:DockPanel>
            <Border toolkit:DockPanel.Dock="Top" 
                    BorderBrush="{ThemeResource AppBarBorderThemeBrush}"
                    BorderThickness="0 0 0 1"
                    >
                <toolkit:DockPanel >


                    <StackPanel toolkit:DockPanel.Dock="Right" Margin="8 0"
                                Orientation="Horizontal"
                                >


                        <Button Background="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <iconPack:PackIconMaterial Kind="Delete" />
                            </StackPanel>

                            <Button.Flyout>
                                <Flyout>
                                    <Button 
                                Content="【確認】フィードグループを削除"
                                Command="{Binding RemoveFeedGroupCommand}"
                                />
                                </Flyout>
                            </Button.Flyout>
                        </Button>

                    </StackPanel>

                    <Border Background="Transparent" IsHitTestVisible="True"
                                Margin="24 0 0 0"
                                >

                        <TextBlock Text="{Binding Title}" 
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                    >
                                
                                <i:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="Tapped">
                                        <core:ChangePropertyAction TargetObject="{Binding ListViewVerticalOffset}" PropertyName="Value" Value="0" />
                                    </core:EventTriggerBehavior>
                                </i:Interaction.Behaviors>


                        </TextBlock>
                    </Border>




                </toolkit:DockPanel>
            </Border>

            <ScrollViewer>
                <StackPanel x:Name="LyaoutRoot" VerticalAlignment="Stretch" Margin="0">

                    <toolkit:DockPanel>


                        <StackPanel toolkit:DockPanel.Dock="Left">
                            <AppBarButton Label="フィード一覧"
                                      Icon="List"
                                      Command="{Binding OpenFeedVideoListPageCommand}" />

                        </StackPanel>

                        <Button Content="名前の変更"
                    toolkit:DockPanel.Dock="Right"
                        VerticalAlignment="Center"
                    Margin="8"
                    >
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding FeedGroupName.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"
                                         >
                                            <i:Interaction.Behaviors>
                                                <mybehavior:KeyboardTrigger Key="Enter">
                                                    <mybehavior:KeyboardTrigger.Actions>
                                                        <mybehavior:CloseFlyoutAction />
                                                        <core:InvokeCommandAction Command="{Binding RenameApplyCommand}" />
                                                    </mybehavior:KeyboardTrigger.Actions>
                                                </mybehavior:KeyboardTrigger>
                                            </i:Interaction.Behaviors>
                                        </TextBox>

                                        <Button Content="OK" Margin="8 0 0 0"
                                    Command="{Binding RenameApplyCommand}"
                                    >
                                            <i:Interaction.Behaviors>
                                                <core:EventTriggerBehavior EventName="Tapped">
                                                    <mybehavior:CloseFlyoutAction />
                                                </core:EventTriggerBehavior>
                                            </i:Interaction.Behaviors>
                                        </Button>
                                    </StackPanel>

                                </Flyout>
                            </Button.Flyout>
                        </Button>

                        <Border />

                    </toolkit:DockPanel>


                    <!-- マイリスト -->
                    <StackPanel Orientation="Horizontal" Margin="16 8 16 0">

                        <SymbolIcon Symbol="List" VerticalAlignment="Center" />

                        <TextBlock Text="マイリスト"
                           VerticalAlignment="Center"
                           Margin="16 0 8 0"
                           FontSize="20"
                           />

                        <AppBarButton Icon="Add" 
                              Label="追加"
                              Command="{Binding AddMylistFeedSourceCommand}"
                              >


                        </AppBarButton>
                    </StackPanel>

                    <ListView ItemsSource="{Binding MylistFeedSources}"
                          ItemTemplate="{StaticResource FeedSourceTemplate}"
                          Margin="8 0"
                      SelectionMode="None"
                          >
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <toolkit:WrapPanel Orientation="Horizontal" 
                                           MinWidth="{Binding ElementName=LyaoutRoot, Path=ActualWidth}"
                                           ItemHeight="48"
                                           ItemWidth="200"
                                           HorizontalAlignment="Stretch"
                                           />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                    </ListView>


                    <Border Visibility="{Binding HasMylistFeedSource.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                    Margin="32 8"
                    >
                        <StackPanel Opacity="0.7">
                            <TextBlock Margin="0 0 0 8">
                        <Run>No items.</Run>
                            </TextBlock>
                            <TextBlock Margin="0">
                        <Run>＋ アイコンから追加できます</Run>
                            </TextBlock>
                        </StackPanel>
                    </Border>






                    <!-- タグ -->
                    <StackPanel Orientation="Horizontal" Margin="16 8 16 0">

                        <SymbolIcon Symbol="Tag" VerticalAlignment="Center" />

                        <TextBlock Text="タグ"
                           VerticalAlignment="Center"
                           Margin="16 0 8 0"
                           FontSize="20"
                           />

                        <AppBarButton Icon="Add" 
                              Label="追加"
                              Command="{Binding AddTagFeedSourceCommand}"
                              >
                        </AppBarButton>
                    </StackPanel>

                    <ListView ItemsSource="{Binding TagFeedSources}"
                          ItemTemplate="{StaticResource FeedSourceTemplate}"
                          Margin="8 0"
                      SelectionMode="None"
                          >
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>


                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <toolkit:WrapPanel Orientation="Horizontal" 
                                           MinWidth="{Binding ElementName=LyaoutRoot, Path=ActualWidth}"
                                           ItemHeight="48"
                                           ItemWidth="200"
                                           HorizontalAlignment="Stretch"
                                           />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                    </ListView>

                    <Border Visibility="{Binding HasTagFeedSource.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                    Margin="32 8"
                    >
                        <StackPanel Opacity="0.7">
                            <TextBlock Margin="0 0 0 8">
                        <Run>No items.</Run>
                            </TextBlock>
                            <TextBlock Margin="0">
                        <Run>＋ アイコンから追加できます</Run>
                            </TextBlock>
                        </StackPanel>
                    </Border>





                    <!-- ユーザー -->
                    <StackPanel Orientation="Horizontal" Margin="16 8 16 0">

                        <SymbolIcon Symbol="People" VerticalAlignment="Center" />

                        <TextBlock Text="ユーザー"
                           VerticalAlignment="Center"
                           Margin="16 0 8 0"
                           FontSize="20"
                           />

                        <AppBarButton Icon="Add" 
                              Label="追加"
                              Command="{Binding AddUserFeedSourceCommand}"
                              >
                        </AppBarButton>
                    </StackPanel>

                    <ListView ItemsSource="{Binding UserFeedSources}"
                          ItemTemplate="{StaticResource FeedSourceTemplate}"
                          Margin="8 0"
                      SelectionMode="None"
                          >
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <toolkit:WrapPanel Orientation="Horizontal" 
                                           MinWidth="{Binding ElementName=LyaoutRoot, Path=ActualWidth}"
                                           ItemHeight="48"
                                           ItemWidth="200"
                                           HorizontalAlignment="Stretch"
                                           />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                    </ListView>

                    <Border Visibility="{Binding HasUserFeedSource.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                    Margin="32 8"
                    >
                        <StackPanel Opacity="0.7">
                            <TextBlock Margin="0 0 0 8">
                        <Run>No items.</Run>
                            </TextBlock>
                            <TextBlock Margin="0">
                        <Run>＋ アイコンから追加できます</Run>
                            </TextBlock>
                        </StackPanel>
                    </Border>





                    <Border Height="32" />

                </StackPanel>
            </ScrollViewer>
        </toolkit:DockPanel>
    </Grid>
    
    
</Page>
