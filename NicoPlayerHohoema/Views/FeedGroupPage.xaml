<Page
    x:Class="NicoPlayerHohoema.Views.FeedGroupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:view="using:NicoPlayerHohoema.Views"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mybehavior="using:NicoPlayerHohoema.Views.Behaviors"
    xmlns:ext="using:WinRTXamlToolkit.Controls.Extensions"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    >

    <Page.Resources>
        <DataTemplate x:Key="FeedSourceTemplate">
            <Border Background="Transparent" IsHitTestVisible="True">

                <i:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <mybehavior:OpenFlyout />
                    </core:EventTriggerBehavior>
                </i:Interaction.Behaviors>

                <FlyoutBase.AttachedFlyout>
                    <Flyout>
                        <AppBarButton Label="削除"
                                        Icon="Delete"
                                        Command="{Binding RemoveFeedSourceCommand}"
                                        />
                    </Flyout>
                </FlyoutBase.AttachedFlyout>
                    
                <TextBlock Text="{Binding Name}" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                        />

            </Border>
        </DataTemplate>
        
        
        
    </Page.Resources>

    <ScrollViewer>
        <StackPanel x:Name="LyaoutRoot" VerticalAlignment="Stretch" Margin="0">

            <toolkit:DockPanel>


                <StackPanel toolkit:DockPanel.Dock="Left">
                    <AppBarButton Label="フィード一覧"
                                      Icon="List"
                                      Command="{Binding OpenFeedVideoListPageCommand}" />

                </StackPanel>
                
                <Button Content="名前の変更"
                    toolkit:DockPanel.Dock="Right"
                        VerticalAlignment="Center"
                    Margin="8"
                    >
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding FeedGroupName.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"
                                         >
                                    <i:Interaction.Behaviors>
                                        <mybehavior:KeyboardTrigger Key="Enter">
                                            <mybehavior:KeyboardTrigger.Actions>
                                                <mybehavior:CloseFlyoutAction />
                                                <core:InvokeCommandAction Command="{Binding RenameApplyCommand}" />
                                            </mybehavior:KeyboardTrigger.Actions>
                                        </mybehavior:KeyboardTrigger>
                                    </i:Interaction.Behaviors>
                                </TextBox>

                                <Button Content="OK" Margin="8 0 0 0"
                                    Command="{Binding RenameApplyCommand}"
                                    >
                                    <i:Interaction.Behaviors>
                                        <core:EventTriggerBehavior EventName="Tapped">
                                            <mybehavior:CloseFlyoutAction />
                                        </core:EventTriggerBehavior>
                                    </i:Interaction.Behaviors>
                                </Button>
                            </StackPanel>

                        </Flyout>
                    </Button.Flyout>
                </Button>

                <Border />

            </toolkit:DockPanel>
            
            
            
            <StackPanel Orientation="Horizontal" Margin="16 8">

                <SymbolIcon Symbol="List" VerticalAlignment="Center" />

                <TextBlock Text="マイリスト"
                           VerticalAlignment="Center"
                           Margin="8 0"
                           FontSize="20"
                           />

                <AppBarButton Icon="Add" 
                              IsCompact="True"
                              >

                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:ChangePropertyAction TargetObject="{Binding FavItemType}" PropertyName="Value" Value="Mylist" />
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                    
                    <AppBarButton.Flyout>
                        <Flyout x:Name="MylistFeedSourceFlyout">
                            <StackPanel Width="400">
                                <toolkit:DockPanel Margin="0 8">
                                    <RadioButton Content="お気に入りから選択" 
                                             GroupName="MylistFavSelctionGroup"
                                             IsChecked="{Binding SelectFromFavItems.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             toolkit:DockPanel.Dock="Left"
                                             />

                                    <ComboBox ItemsSource="{Binding MylistFavItems}" 
                                              SelectedItem="{Binding SelectedFavInfo.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              DisplayMemberPath="Name" 
                                              HorizontalAlignment="Right"
                                              MinWidth="120"
                                              IsEnabled="{Binding SelectFromFavItems.Value}"
                                          />

                                </toolkit:DockPanel>

                                <toolkit:DockPanel Margin="0 8">
                                    <RadioButton Content="マイリストIDを直接指定" 
                                             GroupName="MylistFavSelctionGroup"
                                             IsChecked="{Binding SelectFromFavItems.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource InvertBoolean}}"
                                             toolkit:DockPanel.Dock="Left"
                                             >
                                        <i:Interaction.Behaviors>
                                            <!-- Note: AU済み端末でテキストボックスへのフォーカスができない問題への応急措置 -->
                                            <core:EventTriggerBehavior EventName="Tapped">
                                                <mybehavior:SetFocus TargetObject="{Binding ElementName=MylistCustomText}" />
                                            </core:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>

                                    </RadioButton>

                                    <StackPanel Orientation="Horizontal" 
                                                toolkit:DockPanel.Dock="Bottom"
                                                Visibility="{Binding SelectFromFavItems.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                                                HorizontalAlignment="Right"
                                                >
                                        <TextBlock Text="存在しないか非公開のマイリスト" 
                                                   FontSize="12"
                                                   Opacity="0.7"
                                                   Visibility="{Binding CanUseFeedSource.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                                                   />

                                        <TextBlock>
                                            <Run Text="{Binding FeedSourceItemName.Value}"></Run>
                                        </TextBlock>

                                    </StackPanel>

                                    <TextBox Text="{Binding FeedSourceId.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             ext:TextBoxFocusExtensions.AutoSelectOnFocus="True"
                                             HorizontalAlignment="Right"
                                             MinWidth="120"
                                             IsEnabled="{Binding SelectFromFavItems.Value, Converter={StaticResource InvertBoolean}}"
                                             x:Name="MylistCustomText"
                                             />
                                </toolkit:DockPanel>

                                <Button Content="追加" 
                                        Command="{Binding AddFeedCommand}"
                                        Width="80"
                                        Height="40"
                                        Margin="8"
                                        >
                                    <i:Interaction.Behaviors>
                                        <core:EventTriggerBehavior EventName="Tapped">
                                            <mybehavior:CloseFlyoutAction />
                                        </core:EventTriggerBehavior>
                                    </i:Interaction.Behaviors>
                                </Button>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </StackPanel>

            <ListView ItemsSource="{Binding MylistFeedSources}"
                          ItemTemplate="{StaticResource FeedSourceTemplate}"
                          Margin="8 0"
                      SelectionMode="None"
                          >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <toolkit:WrapPanel Orientation="Horizontal" 
                                           MinWidth="{Binding ElementName=LyaoutRoot, Path=ActualWidth}"
                                           ItemHeight="48"
                                           ItemWidth="200"
                                           HorizontalAlignment="Stretch"
                                           />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

            </ListView>


            <Border Visibility="{Binding HasMylistFeedSource.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                    Margin="32 8"
                    >
                <StackPanel Opacity="0.7">
                    <TextBlock Margin="0 0 0 8">
                        <Run>No items.</Run>
                    </TextBlock>
                    <TextBlock Margin="0">
                        <Run>＋ アイコンから追加できます</Run>
                    </TextBlock>
                </StackPanel>
            </Border>






            <StackPanel Orientation="Horizontal" Margin="16 8">

                <SymbolIcon Symbol="Tag" VerticalAlignment="Center" />

                <TextBlock Text="タグ"
                           VerticalAlignment="Center"
                           Margin="8 0"
                           FontSize="20"
                           />

                <AppBarButton Icon="Add" 
                              IsCompact="True"
                              >

                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:ChangePropertyAction TargetObject="{Binding FavItemType}" PropertyName="Value" Value="Tag" />
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>

                    <AppBarButton.Flyout>
                        <Flyout x:Name="TagFeedSourceFlyout">
                            <StackPanel Width="400">
                                <toolkit:DockPanel Margin="0 8">
                                    <RadioButton Content="お気に入りから選択" 
                                             GroupName="TagFavSelctionGroup"
                                             IsChecked="{Binding SelectFromFavItems.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             toolkit:DockPanel.Dock="Left"
                                             />

                                    <ComboBox ItemsSource="{Binding TagFavItems}" 
                                              SelectedItem="{Binding SelectedFavInfo.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              DisplayMemberPath="Name" 
                                              HorizontalAlignment="Right"
                                              MinWidth="120"
                                              IsEnabled="{Binding SelectFromFavItems.Value}"
                                          />

                                </toolkit:DockPanel>

                                <toolkit:DockPanel Margin="0 8">
                                    <RadioButton Content="タグを入力" 
                                             GroupName="TagFavSelctionGroup"
                                             IsChecked="{Binding SelectFromFavItems.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource InvertBoolean}}"
                                             toolkit:DockPanel.Dock="Left"
                                             >
                                        <i:Interaction.Behaviors>
                                            <!-- Note: AU済み端末でテキストボックスへのフォーカスができない問題への応急措置 -->
                                            <core:EventTriggerBehavior EventName="Tapped">
                                                <mybehavior:SetFocus TargetObject="{Binding ElementName=TagCustomText}" />
                                            </core:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                    </RadioButton>

                                    <TextBox Text="{Binding FeedSourceId.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             ext:TextBoxFocusExtensions.AutoSelectOnFocus="True"
                                             HorizontalAlignment="Right"
                                             MinWidth="120"
                                             IsEnabled="{Binding SelectFromFavItems.Value, Converter={StaticResource InvertBoolean}}"
                                             x:Name="TagCustomText"
                                             />
                                </toolkit:DockPanel>

                                <Button Content="追加" 
                                        Command="{Binding AddFeedCommand}"
                                        Width="80"
                                        Height="40"
                                        Margin="8"
                                        >
                                    <i:Interaction.Behaviors>
                                        <core:EventTriggerBehavior EventName="Tapped">
                                            <mybehavior:CloseFlyoutAction />
                                        </core:EventTriggerBehavior>
                                    </i:Interaction.Behaviors>
                                </Button>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </StackPanel>

            <ListView ItemsSource="{Binding TagFeedSources}"
                          ItemTemplate="{StaticResource FeedSourceTemplate}"
                          Margin="8 0"
                      SelectionMode="None"
                          >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>

                
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <toolkit:WrapPanel Orientation="Horizontal" 
                                           MinWidth="{Binding ElementName=LyaoutRoot, Path=ActualWidth}"
                                           ItemHeight="48"
                                           ItemWidth="200"
                                           HorizontalAlignment="Stretch"
                                           />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

            </ListView>

            <Border Visibility="{Binding HasTagFeedSource.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                    Margin="32 8"
                    >
                <StackPanel Opacity="0.7">
                    <TextBlock Margin="0 0 0 8">
                        <Run>No items.</Run>
                    </TextBlock>
                    <TextBlock Margin="0">
                        <Run>＋ アイコンから追加できます</Run>
                    </TextBlock>
                </StackPanel>
            </Border>





            <StackPanel Orientation="Horizontal" Margin="16 8">

                <SymbolIcon Symbol="People" VerticalAlignment="Center" />

                <TextBlock Text="ユーザー"
                           VerticalAlignment="Center"
                           Margin="8 0"
                           FontSize="20"
                           />

                <AppBarButton Icon="Add" 
                              IsCompact="True"
                              >

                    <i:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="Tapped">
                            <core:ChangePropertyAction TargetObject="{Binding FavItemType}" PropertyName="Value" Value="User" />
                        </core:EventTriggerBehavior>
                    </i:Interaction.Behaviors>

                    <AppBarButton.Flyout>
                        <Flyout x:Name="UserFeedSourceFlyout">
                            <StackPanel Width="400">
                                <toolkit:DockPanel Margin="0 8">
                                    <RadioButton Content="お気に入りから選択" 
                                             GroupName="TagFavSelctionGroup"
                                             IsChecked="{Binding SelectFromFavItems.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             toolkit:DockPanel.Dock="Left"
                                             />

                                    <ComboBox ItemsSource="{Binding UserFavItems}" 
                                              SelectedItem="{Binding SelectedFavInfo.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              DisplayMemberPath="Name" 
                                              HorizontalAlignment="Right"
                                              MinWidth="120"
                                          />

                                </toolkit:DockPanel>

                                <toolkit:DockPanel Margin="0 8">
                                    <RadioButton Content="ユーザーIDを直接入力" 
                                             GroupName="TagFavSelctionGroup"
                                             IsChecked="{Binding SelectFromFavItems.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource InvertBoolean}}"
                                             toolkit:DockPanel.Dock="Left"
                                             >
                                        <i:Interaction.Behaviors>
                                            <!-- Note: AU済み端末でテキストボックスへのフォーカスができない問題への応急措置 -->
                                            <core:EventTriggerBehavior EventName="Tapped">
                                                <mybehavior:SetFocus TargetObject="{Binding ElementName=UserCustomText}" />
                                            </core:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                    </RadioButton>

                                    <StackPanel Orientation="Horizontal" 
                                                toolkit:DockPanel.Dock="Bottom"
                                                HorizontalAlignment="Right"
                                                Visibility="{Binding SelectFromFavItems.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                                                >
                                        <TextBlock Text="存在しないか投稿動画非公開のユーザー" 
                                                   FontSize="12"
                                                   Opacity="0.7"
                                                   Visibility="{Binding CanUseFeedSource.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                                                   
                                                   />

                                        <TextBlock>
                                            <Run Text="{Binding FeedSourceItemName.Value}"></Run>
                                        </TextBlock>

                                    </StackPanel>

                                    <TextBox Text="{Binding FeedSourceId.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             ext:TextBoxFocusExtensions.AutoSelectOnFocus="True"
                                             HorizontalAlignment="Right"
                                             MinWidth="120"
                                             IsEnabled="{Binding SelectFromFavItems.Value, Converter={StaticResource InvertBoolean}}"
                                             x:Name="UserCustomText"
                                             >
                                        
                                    </TextBox>
                                </toolkit:DockPanel>

                                <Button Content="追加" 
                                        Command="{Binding AddFeedCommand}"
                                        Width="80"
                                        Height="40"
                                        Margin="8"
                                        >
                                    <i:Interaction.Behaviors>
                                        <core:EventTriggerBehavior EventName="Tapped">
                                            <mybehavior:CloseFlyoutAction />
                                        </core:EventTriggerBehavior>
                                    </i:Interaction.Behaviors>
                                </Button>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </StackPanel>

            <ListView ItemsSource="{Binding UserFeedSources}"
                          ItemTemplate="{StaticResource FeedSourceTemplate}"
                          Margin="8 0"
                      SelectionMode="None"
                          >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <toolkit:WrapPanel Orientation="Horizontal" 
                                           MinWidth="{Binding ElementName=LyaoutRoot, Path=ActualWidth}"
                                           ItemHeight="48"
                                           ItemWidth="200"
                                           HorizontalAlignment="Stretch"
                                           />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

            </ListView>

            <Border Visibility="{Binding HasUserFeedSource.Value, Converter={StaticResource BooleanToVisibilityInverted}}"
                    Margin="32 8"
                    >
                <StackPanel Opacity="0.7">
                    <TextBlock Margin="0 0 0 8">
                        <Run>No items.</Run>
                    </TextBlock>
                    <TextBlock Margin="0">
                        <Run>＋ アイコンから追加できます</Run>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            
            
            
            
            <Border Height="32" />

            <Border HorizontalAlignment="Stretch" Background="#99C00000">
                <Button Content="このフィードグループを削除する"
                        Margin="16 16"
                        HorizontalAlignment="Center"
                        >
                    <Button.Flyout>
                        <Flyout>
                            <Button 
                                Content="【確認】フィードグループを削除"
                                Command="{Binding RemoveFeedGroupCommand}"
                                />
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Border>
            
            
        </StackPanel>
    </ScrollViewer>
</Page>
