<UserControl
    x:Class="NicoPlayerHohoema.Views.HohoemaListItem.HohoemaListItemCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoPlayerHohoema.Views.HohoemaListItem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <toolkit:DockPanel>

        <Grid toolkit:DockPanel.Dock="Top">
            <Image Source="{Binding FirstImageUrl}"
                Visibility="{Binding HasImageUrl, Converter={StaticResource BooleanToVisibility}}" 
                Stretch="Uniform"
                   
                />

            <Border>
                <TextBlock Text="{Binding ImageCaption}" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="16"
                       />
            </Border>
        </Grid>

        <StackPanel Margin="8">
            <!-- top area -->
            <StackPanel>
                <TextBlock Text="{Binding Title}"
                        TextWrapping="Wrap"
                        />
            </StackPanel>
        </StackPanel>
    </toolkit:DockPanel>
    
</UserControl>
